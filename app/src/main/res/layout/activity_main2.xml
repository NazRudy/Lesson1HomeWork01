<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_text"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_textPersonName"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_phone"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_number"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_textPassword"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edit_textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_textEmailAddress"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_numberPassword"
        android:inputType="numberPassword"/>

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edit_textLongMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_textLongMessage"
        android:inputType="textLongMessage"/>

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:hint="edit_time"
        android:inputType="time"/>
</LinearLayout>